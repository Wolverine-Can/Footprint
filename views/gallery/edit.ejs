<%- include("../partials/header") %>
<div class = "container">
	<div class="row justify-content-center">
        <div class="col-md-12 text-center" style = "padding-top:5%">
            <h1>Edit <%= campground.name %></h1>
        </div>
        <div class="col-xs-12 col-md-8 col-lg-6">
			<form action = "/gallery/<%= campground._id %>?_method=PUT", method = "POST">
				<div class = "form-group">
					<label for="location">Basic Information</label>
					<input class = "form-control" type = "text" name = "campground[name]" value = "<%= campground.name %>">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" name = "campground[image]" value = "<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
				</div>
				<div class = "form-group">
					<label for="location">More Information</label>
					<input class = "form-control" type = "text" name = "campground[info1]" value = "<%= campground.info1 %>">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" name = "campground[info2]" value = "<%= campground.info2 %>">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" name = "campground[info3]" value = "<%= campground.info3 %>">
				</div>
				<div class = "form-group">
					<textarea class = "form-control description" type = "text" name = "campground[description]"><%= campground.description %></textarea>
				</div>
				
				<div class = "form-group">
					<button class = "btn btn-lg btn-primary btn-block"> Submit!</button>
				</div>				
			</form>
			<div class = "text-center"><a class = "goBack" href="/gallery">Go Back</a></div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
	