<%- include("../partials/header") %>
	<div class="row justify-content-center" style = "margin: 20%">
        <div class="col-md-12 text-center">
            <h1>Edit Comment</h1>
        </div>
        <div class="col-xs-12 col-md-8 col-lg-6">
            <form action="/gallery/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
			<div class = "text-center"><a class = "goBack" href="/gallery">Go Back</a></div>
        </div>
    </div>
<%- include("../partials/footer") %>
	